<%= render 'shared/banner' %>

<div class="wrapper">
  <div class="container">
    <div class="row">
      <h1 class="title-home">Restaurants</h1>
      <% @restaurants.each do |restaurant|%>
        <div class="col-xs-4">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= "#{rand(1..15)}.jpg" %>);">
            <div class="card-name">
              <h2><%= restaurant.name %></h2>
            </div>
            <div class="card-description">
              <p><%= restaurant.address %></p>
              <p><%= restaurant.phone_number %></p>
            </div>
            <div class="card-category">
              <p><%= restaurant.category %></p>
            </div>
            <%= link_to "", (restaurant_path(restaurant)), class: "card-link"%>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

