
<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <div class="burger" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://s-media-cache-ak0.pinimg.com/originals/c3/bf/68/c3bf682c860c6a1287c83ff3c95f4820.gif'); width: 500px; height: 600px;">
      </div>
    </div>
    <div class="col-xs-6 col-xs-offset-3" style= "margin-top: 60px; margin-bottom: 40px;">
      <%= simple_form_for [@restaurant] do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :category %>
        <%= f.input :phone_number %>
        <%= f.submit "Create", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

